

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <div class="caption">
            <h4 style="" title="@Model.ProjectName" class="project-name">
                <ProjectLink Model="Model" />
                @if (Model.LastKogdaIgraId is not null)
                {
                    <text>&nbsp;</text> <a href="https://kogda-igra.ru/game/@(Model.LastKogdaIgraId.Value)/"><CalendarIcon /></a>
                }
            </h4>
            <div class="btn-group">
                @if (Model.IsMaster)
                {
                    <a href="/@(Model.ProjectId.Value)/home"
                       class="btn btn-info btn-sm"
                       role="button"
                       title="У меня есть права мастера на этой игре">Мой проект</a>
                }

                <a href="/@(Model.ProjectId.Value)/roles"
                   class="btn btn-primary btn-sm"
                   role="button"
                   title="Сетка ролей">
                    Сетка ролей
                </a>

                @if (!Model.IsMaster && Model.PublishPlot)
                {
                    <a href="/@(Model.ProjectId.Value)/plot/index"
                       class="btn btn-info btn-sm"
                       role="button">
                        Материалы
                    </a>
                }

                @if (Model.HasMyClaims || Model.IsAcceptingClaims)
                {
                    <MyClaimButton ProjectId="@Model.ProjectId" HasMyClaims="@Model.HasMyClaims" ProjectStatus="@Model.Status" Size="@SizeStyleEnum.Small" />
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public ProjectListItemViewModel Model { get; set; } = null!;
}

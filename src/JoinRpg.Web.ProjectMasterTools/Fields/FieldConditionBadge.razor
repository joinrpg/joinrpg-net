@if (GroupNames.Length > 0)
{
    <Tooltip Title="@tooltip">
      <JoinBadge Variation="VariationStyleEnum.Primary" Size="SizeStyleEnum.Small"><InfoIcon /> Условное</JoinBadge>
    </Tooltip>
}
@code
{
    [Parameter]
    [EditorRequired]
    public string[] GroupNames { get; set; } = null!;

    private string tooltip = "";

    protected override void OnParametersSet()
    {
        tooltip = "Для групп: " + string.Join(", ", GroupNames);
        base.OnParametersSet();
    }
}

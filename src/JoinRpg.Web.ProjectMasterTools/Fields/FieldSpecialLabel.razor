@switch (Label)
{
    case FieldSpecialLabelView.ForClaim:
        <JoinBadge Variation="VariationStyleEnum.Primary" Title="Это поле привязано к заявке и сохранится при смене игроком роли">И</JoinBadge>
        break;
    case FieldSpecialLabelView.Public:
        <EyeIcon Title="Это поле будет показано публично" />
        break;
    case FieldSpecialLabelView.Name:
        <InfoIcon Title="Это поле считается именем персонажа и показывается в сетке ролей. Это можно изменить в настройках." />
        break;
    case FieldSpecialLabelView.Description:
        <InfoIcon Title="Это поле считается описанием персонажа и показывается в сетке ролей. Это можно изменить в настройках." />
        break;
    case FieldSpecialLabelView.SchedulePlace:
        <InfoIcon Title="Это поле считается местом проведения мероприятия. Это можно изменить в настройках." />
        break;
    case FieldSpecialLabelView.ScheduleTime:
        <InfoIcon Title="Это поле считается временем проведения мероприятия. Это можно изменить в настройках." />
        break;
}


@code {
    [Parameter]
    [EditorRequired]
    public FieldSpecialLabelView Label { get; set; }
}

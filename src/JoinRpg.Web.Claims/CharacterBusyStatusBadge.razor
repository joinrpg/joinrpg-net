@using JoinRpg.Helpers
@switch (CharacterBusyStatus)
{
    case CharacterBusyStatusView.Npc:
        <JoinBadge Variation="VariationStyleEnum.Primary">NPC</JoinBadge>
        break;
    case CharacterBusyStatusView.Vacancy:
        <JoinBadge Variation="VariationStyleEnum.Primary">Вакансия</JoinBadge>
        break;
    case CharacterBusyStatusView.HotVacancy:
        <JoinBadge Variation="VariationStyleEnum.Warning" Title="Горячая роль"><HotIcon />Hot</JoinBadge>
        break;
    case CharacterBusyStatusView.Slot:
        <JoinBadge Variation="VariationStyleEnum.Primary">
            Шаблон
            @if (SlotCount is not null)
            {
                <text> (@SlotCount)</text>
            }
            else
            {
                <text> (∞)</text>
            }
        </JoinBadge>
        break;
    case CharacterBusyStatusView.HotSlot:
        <JoinBadge Variation="VariationStyleEnum.Warning" Title="Горячая роль">
            <HotIcon />
            Шаблон
            @if (SlotCount is not null)
            {
                <text> (@SlotCount)</text>
            }
            else
            {
                <text> (∞)</text>
            }
        </JoinBadge>
        break;
    case CharacterBusyStatusView.HasPlayer:
        <JoinBadge Variation="VariationStyleEnum.Success">Занят</JoinBadge>
        break;
    case CharacterBusyStatusView.Discussed:
    case CharacterBusyStatusView.Unknown:
    default:
        <JoinBadge Variation="VariationStyleEnum.Danger">Неизвестно</JoinBadge>
        break;
}
@code {
    [Parameter]
    [EditorRequired]
    public CharacterBusyStatusView CharacterBusyStatus { get; set; } = default!;

    [Parameter]
    [EditorRequired]
    public int? SlotCount { get; set; }
}

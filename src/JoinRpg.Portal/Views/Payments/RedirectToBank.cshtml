@{ Layout = null; }
@model JoinRpg.Services.Interfaces.ClaimPaymentContext
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Перенаправление на страницу оплаты</title>
    <style type="text/css">
        html, body {
            display: block;
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;
        }
        div.content {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <div class="content">
        <div class="form">
            <h4>Идет перенаправление на страницу оплаты...</h4>
            <h4>Если ничего не произошло, нажмите на кнопку «Перейти к оплате»</h4>
            @await Html.PartialAsync("_RedirectFormPartial", Model.RequestDescriptor)
        </div>
    </div>
</body>
</html>

@model PscbApi.Models.PaymentRequestDescriptor

@if (Model.Debug)
{
    <h3 class="danger">Отладочный режим</h3>
}

<form id="pay" action="@Model.Url" method="post">
    @await Html.PartialAsync("_RedirectContentPartial", Model.Request)
    <button type="submit">Перейти к оплате</button>
</form>

<script type="text/javascript">
    const redirectTimeout = @(Model.Debug ? 60000 : 100);
    setTimeout(() =>
    {
        const form = document.getElementById("pay");
        form.submit();
    }, redirectTimeout);
</script>

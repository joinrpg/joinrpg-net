
@using JoinRpg.Web.Models
@model FieldPossibleValueViewModel

@if (Model.Selected)
{
    <option value="@Model.ProjectFieldDropdownValueId" price="@Model.Price">( ничего не выбрано )@(Model.HasPrice ? @" (" + Html.RenderPrice(Model.Price) + ")" : "")</option>
}
else
{
    <option value="@Model.ProjectFieldDropdownValueId" selected="selected" price="@Model.Price">( ничего не выбрано )@(Model.HasPrice ? @" (" + Html.RenderPrice(Model.Price) + ")" : "")</option>
}

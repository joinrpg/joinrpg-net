@using JoinRpg.PrimitiveTypes
@using JoinRpg.Web.Models.Plot
@model ProjectIdentification

<div class="modal fade" id="unpublishElementModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="POST" asp-action="UnPublishElement" asp-controller="Plot" asp-route-ProjectId="@Model.Value">
                <input type="hidden" name="elementId" id="publishPlotElementId" value="0" />
                @Html.AntiForgeryToken()
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Скрыть вводную (отменить публикацию)</h4>
                </div>

                <div class="modal-body">Вводная будет скрыта от игроков</div>

                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Скрыть</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>

                </div>
            </form>
        </div>
    </div>
</div>

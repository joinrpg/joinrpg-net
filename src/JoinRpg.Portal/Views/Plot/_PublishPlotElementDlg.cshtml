@using JoinRpg.Web.Models.Plot
@model PublishPlotElementViewModel

<div class="modal fade" id="publishElementModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("PublishElement", "Plot", new { Model.PlotFolderId, Model.ProjectId }, FormMethod.Post))
            {
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Опубликовать вводную</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.PlotElementId, new { Id = "publishPlotElementId" })
                        @Html.HiddenFor(m => m.Version, new { Id = "publishVersionId" })
                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                @Html.CheckBoxFor(m => m.SendNotification)
                                @Html.LabelFor(m => m.SendNotification)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-10 col-md-offset-1">
                                @Html.LabelFor(m => m.CommentText, new { style = "display: block;" })
                                @Html.TextAreaFor(m => m.CommentText, new { style = "display: block; width: 100%;" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Опубликовать</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                </div>
            }
        </div>
    </div>
</div>


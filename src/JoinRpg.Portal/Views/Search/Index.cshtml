@using JoinRpg.Web.Models
@model SearchResultViewModel
@{
  ViewBag.Title = "Результаты поиска";
}

<h2>@ViewBag.Title</h2>
@if (!string.IsNullOrEmpty(Model.SearchString))
{
    <p>Вы искали: @Model.SearchString</p>
    if (Model.ResultsByProject.Any())
    {

        foreach (var resultsForProject in Model.ResultsByProject)
        {
            var projectInfoModel = resultsForProject.Key;
            <div class="panel panel-default">
                @if (projectInfoModel != null)
                {
                    <div
                        class="panel-heading"
                         style="@(projectInfoModel.IsActive ? "" : "text-decoration: line-through")">
                        @projectInfoModel.ProjectName
                    </div>
                }

                <div class="panel-body">
                    @foreach (var result in resultsForProject)
                    {
                        @Html.DisplayFor(m => result)
                    }
                </div>
            </div>

        }
    }
    else
    {
        <p>Ничего не найдено</p>
    }
}
else
{
    <p>Вы ничего не искали</p>
}

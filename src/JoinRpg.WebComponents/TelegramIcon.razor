@if (!string.IsNullOrWhiteSpace(Link))
{
    if (Collapse)
    {
        <a href="https://t.me/@Link"><span class="glyphicon glyphicon-send" aria-hidden="true"></span></a>
    }
    else
    {
        <text>
            <span class="glyphicon glyphicon-send" aria-hidden="true"></span>&nbsp;<a href="https://t.me/@Link">
                @if (ChildContent is null)
                {
                    @Link
                }
                else
                {
                    @ChildContent
                }
            </a>
        </text>
    }
}


@code {
    [EditorRequired]
    [Parameter]
    public string? Link { get; set; }

    [Parameter]
    public bool Collapse { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}

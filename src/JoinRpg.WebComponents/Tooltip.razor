@if(string.IsNullOrWhiteSpace(Title))
{
    @ChildContent
    return;
}

<div class="join-tooltip-container">
    <div>
        @ChildContent
    </div>
    <div class="join-tooltip">
        @Title
    </div>
</div>

@code {
    [Parameter]
    public string? Title { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}


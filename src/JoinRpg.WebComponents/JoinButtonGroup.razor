@if (SkipGroup)
{
    @ChildContent
    return;
}
<div class="@BootstrapStyle.Build("btn-group", variationStyle: null, size: Size)" style="display:inline-block">
    @ChildContent
</div>
@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public SizeStyleEnum Size { get; set; } = SizeStyleEnum.Medium;
    [Parameter] public bool SkipGroup { get; set; } = false;
}

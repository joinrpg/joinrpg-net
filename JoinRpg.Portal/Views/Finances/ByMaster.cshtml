@using JoinRpg.Domain
@model JoinRpg.Web.Models.MoneyInfoForUserViewModel


@{
    ViewBag.Title = Model.UserDetails.User.GetDisplayName() + " — сводка по деньгам";
}

<h2>@ViewBag.Title</h2>


@Html.DisplayFor(model => model.UserDetails)

<h3>Итого</h3>

@Html.Partial("_MasterBalance", new[] { Model.Balance })

<h3>Переводы</h3>
@Html.Partial("_Transfers", Model.Transfers)

<h3>Взносы по типам</h3>
@Html.Partial("_PaymentTypes", Model.PaymentTypeSummary)

<h3>Взносы разбивка</h3>

@Html.Partial("_Operations", Model.Operations.Items)


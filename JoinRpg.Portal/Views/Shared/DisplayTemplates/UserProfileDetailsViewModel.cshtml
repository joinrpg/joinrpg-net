@using JoinRpg.Web.Models
@using HtmlString = Microsoft.AspNetCore.Html.HtmlString
@model UserProfileDetailsViewModel
<table>
    <tr>
        <td style="vertical-align: top">
            @Html.Partial("DisplayTemplates/UserAvatar", Model.User)
        </td>
        <td>
@if (Model.HasAccess)
{
  @Html.DisplayFor(model => model.User)
if (!string.IsNullOrWhiteSpace(Model.FullName))
 {
   <text><br/> @Model.FullName </text>
 }
  <br/>
  @(new HtmlString(string.Join("<br>", new object[]
    {
      Html.DisplayFor(model => model.Email),
      Html.DisplayFor(model => model.PhoneNumber),
      Html.DisplayFor(model => model.Telegram),
      Html.DisplayFor(model => model.Skype),
      Html.DisplayFor(model => model.Livejournal),
      Html.DisplayFor(model => model.Vk)
    }.Where(s => !string.IsNullOrWhiteSpace(s.ToString())))))
if (Model.AllrpgId != null && Model.AllrpgId != 0)
 {
   <br/>
   <a href="https://www.allrpg.info/people/@Model.AllrpgId/">Профиль на allrpg</a>
 }
}</td>
    </tr>    
</table>

@using JoinRpg.Web.Models
@model LoginPageViewModel
@{
    ViewBag.Title = "Войти";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <partial name="_PasswordLoginFormPartial" model="@Model.Login" />
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            <partial name="_ExternalLoginsListPartial" model="@Model.External" />
        </section>
    </div>
</div>

@section Scripts {
    <script src="~/js/keyhandler.js"></script>
}

@using JoinRpg.CommonUI.Models
@using JoinRpg.Web.App_Code
@using JoinRpg.Web.Models
@model PaymentViewModel

<div class="modal fade" id="payOnlineDialog" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            @using (Html.BeginForm("ClaimPayment", "Payments", FormMethod.Post, new {enctype = "multipart/form-data"}))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.ProjectId)
                @Html.HiddenFor(model => model.ClaimId)
                @Html.HiddenFor(model => model.OperationDate)

                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="deleteTitle">@(Model.ActionName)</h4>
                </div>
                <div class="modal-body">
                    @if (!Model.ClaimApproved)
                    {
                        <div class="join alert alert-warning" role="alert"><i class="glyphicon glyphicon-warning-sign"></i>
                            Заявка не принята. Вы точно хотите оплатить взнос?
                        </div>
                    }

                    @if (Model.Money == 0)
                    {
                        <div class="join alert alert-warning" role="alert"><i class="glyphicon glyphicon-question-sign"></i>
                            Вы уже вносили деньги. Вы точно хотите оплатить еще?
                        </div>
                    }

                    <div class="join alert alert-info">
                        <i class="glyphicon glyphicon-info-sign"></i>
                        <div style="font-size: smaller;">
                            @Html.Partial("..\\Finances\\_PaymentLegalInfoPartial")
                        </div>
                    </div>

                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Money, new { @class = "col-md-4 control-label"})
                            <div class="col-md-8">
                                <div>
                                    @Html.EditorFor(model => model.Money, new {htmlAttributes = new {@class = "form-control", style = "display: inline-block; max-width: 150px"}})
                                    ₽
                                </div>
                                @Html.ValidationMessageFor(model => model.Money, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.CommentText)
                                <textarea id="@Html.IdFor(model => model.CommentText)" name="@Html.NameFor(model => model.CommentText)" cols="100" rows="4" class="form-control">@Model.CommentText</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.CheckBoxFor(model => model.AcceptContract, new { onchange = "dlgPayContractChange()" })
                                <label for="@Html.IdFor(model => model.AcceptContract)">Я прочитал(а), понял(а) и принимаю условия @Html.ActionLink("оферты", "user-agreement", "OnlinePayments")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-success" id="dlgPayOnlineSubmit" disabled>@(Model.ActionName)</button>
                </div>
            }
        </div>
    </div>
</div>

<script type="text/javascript" defer>
    function dlgPayContractChange()
    {                                       
        const checkBox = document.getElementById('@Html.IdFor(model => model.AcceptContract)');
        const submitBtn = document.getElementById('dlgPayOnlineSubmit');
        if (checkBox.checked)
            submitBtn.removeAttribute('disabled');
        else
            submitBtn.setAttribute('disabled', '');
    }
</script>

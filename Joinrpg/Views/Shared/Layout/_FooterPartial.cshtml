@using JoinRpg.Web.App_Code

<div style="display: flex; flex-direction: row; align-items: center">
    <div>
        <strong style="font-size: larger">JoinRpg версия @ViewContext.Controller.GetType().Assembly.GetName().Version</strong>
    </div>
    <div style="margin-left: auto; display: flex; flex-direction: row; align-items: center; justify-content: space-between;">
        <a style="margin-left: 0.5em;" href="@Contacts.VkGroup"><img height="20px" src="~/Content/Images/logo-vk.svg" /></a>
        <a style="margin-left: 0.5em;"  href="@Contacts.TelegramChat"><img height="20px" src="~/Content/Images/logo-telegram.svg" /></a>

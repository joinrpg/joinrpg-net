@model JoinRpg.Web.Models.HomeViewModel

@{
    ViewBag.Title = ViewBag.IsProduction ?  "JoinRpg.RU" : "Dev.JoinRpg.RU";
}
<br/>
<div class="panel panel-default well">
    <div class="panel-body">
        <h2 >@ViewBag.Title</h2>
        @if (ViewBag.IsProduction)
        {
        <div>
            <p>
                Joinrpg помогает мастерам и игрокам готовиться к играм с 2015 года. База заявок от создателей <a href="http://kogda-igra.ru">Kogda-Igra.ru</a>.
            </p>
            <p class="alert alert-warning">Использование joinrpg бесплатно, но прямо сейчас идет <a href="@Url.Action("Funding2016", "Home")" class="alert-link">сбор денег</a> на развитие проекта.</p>

            @Html.ActionLink("Узнать больше", "About", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Создать базу заявок", "Create", "Game", null, new { @class = "btn btn-success" })
            @Html.ActionLink("Как помочь?", "HowToHelp", null, new { @class = "btn btn-default" })
        </div>
        }
        else
        {
        <div>
            <div class="alert alert-danger">
                Это тестовая версия JoinRpg.ru.<br/>Не используйте ее для реальной работы с игроками<br/>
            Если вы игрок и забрели сюда случайно, вам <a href="http://joinrpg.ru">на основной сервер</a> 
            </div>. 

            @Html.ActionLink("Узнать больше", "About", null, new { @class = "btn btn-primary" })
            @Html.ActionLink("Создать тестовую базу заявок", "Create", "Game", null, new { @class = "btn btn-success" })
            <a href="http://joinrpg.ru" class="btn btn-info"> Перейти на основной сервер</a>
        </div>
        }
        
    </div>
</div>


<h3>Игры</h3>

<div class="row">
    @foreach (var project in Model.ActiveProjects)
    {
        @Html.Partial("ProjectCard", project)
    }
        @if (Model.HasMoreProjects)
        {
            <div class="col-md-12">
                <div class="thumbnail">
                    <div class="caption text-center">
                         @Html.ActionLink("Еще игры...", "BrowseGames", "Home")  / @Html.ActionLink("Архив...", "GameArchive", "Home") </div>
                </div>

            </div>
        }
</div>
